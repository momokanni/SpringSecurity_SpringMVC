@charset "utf-8";
/* CSS Document */
.bottom_h{ height:70px;}

/*menu*/
.art_tab{ height:auto; width:100%; overflow:hidden; border-bottom:1px solid #fafafa; height:42px; position:fixed; top:0; left:0; z-index:100; position: -webkit-sticky; position: sticky;}
.tab_menu{ width:1000px; padding:0 2%}
.tab_menu li{ display:inline-block; padding:0 5px}
.tab_menu li a{ font-size:16px; color:#888; height:42px; line-height:42px; display:block; padding:0 8px}
.tab_menu li a.menu_in{ color:#31c27c; font-weight:bold; position:relative; color:#444; font-size:18px}
.tab_menu li a.menu_in em{ height:2.5px; display:block; position:absolute; bottom:0; left:0; width:46%; left:27%; border-radius:2.5px}


